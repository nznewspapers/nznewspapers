<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Redirecting...</title>
    <script>
        const params = new URLSearchParams(window.location.search);
        const place = params.get('place');
        if (place) {
            // Slugify the place name to match 11ty output (kebab-case)
            // Simple slugify: lowercase, remove non-word chars (except space), replace spaces with hyphens
            const slug = place.toLowerCase().trim().replace(/[^\w\s-]/g, '').replace(/[\s_-]+/g, '-').replace(/^-+|-+$/g, '');
            window.location.replace(`/places/${slug}/`);
        } else {
            // Fallback to places list
            window.location.replace('/places/');
        }
    </script>
</head>
<body>
    <p>Redirecting to place...</p>
</body>
</html>
